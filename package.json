{
  "name": "apparent-antimatter",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "gen:puzzles": "node scripts/gen-puzzles.mjs",
    "new-draft": "node scripts/new-draft.mjs",
    "dev": "node scripts/gen-puzzles.mjs --include-drafts && astro dev",
    "build": "npm run gen:puzzles && astro build",
    "deploy": "npm run build && gh-pages -d dist --dotfiles --nojekyll",
    "test:integration": "node scripts/run-integration.mjs",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "astro": "^5.17.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^25.2.1",
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1"
  }
}
